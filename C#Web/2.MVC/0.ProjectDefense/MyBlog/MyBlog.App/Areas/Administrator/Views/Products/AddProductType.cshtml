@model AddProductTypeBindingModel
@{
    ViewData["Title"] = "Add Product Type";
}

<h2>Add Type For Products</h2>
<br />

<form asp-area="Administrator" asp-controller="Products" asp-action="AddProductType" method="post">
    @Html.FormGroupFor(model => model.TypeName)

    <div class="form-group">
        <div class="col-sm-push-2">
            <input type="submit" value="Create" class="btn btn-success" />
            <a asp-area="Administrator" asp-controller="Products" asp-action="Index" class="btn btn-default">Cancel</a>
        </div>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
