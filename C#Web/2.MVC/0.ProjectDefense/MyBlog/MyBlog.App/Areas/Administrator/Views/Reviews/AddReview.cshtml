@model AddReviewBindingModel
@{
    ViewData[CommonConstants.TitleSuffix] = "Add Review";
}

<h2>Create Review</h2>
<br />
<form asp-area="Administrator" asp-controller="Reviews" asp-action="AddReview" method="post">
    @Html.FormGroupFor(model => model.Title)
    @Html.FormGroupFor(model => model.Content)
    @Html.FormGroupFor(model => model.PhotoURL)
    @Html.FormGroupFor(model => model.HighLightVideoURL)
    @Html.FormGroupFor(model => model.AdditionalInfoURL)

    <div class="container-fluid">
        <div class="row">
            <div class="control-label col-sm-2">
                <label asp-for="ReviewTypeId">Review Type</label>
            </div>
            <div>
                <select asp-for="ReviewTypeId" asp-items="Model.AllReviewTypes" class="form-control"></select>
            </div>
        </div>
    </div>
    <br />

    <div class="form-group">
        <div class="col-sm-push-2">
            <input type="submit" value="Create" class="btn btn-success" />
            <a asp-area="Administrator" asp-controller="Reviews" asp-action="Index" class="btn btn-default">Cancel</a>
        </div>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
