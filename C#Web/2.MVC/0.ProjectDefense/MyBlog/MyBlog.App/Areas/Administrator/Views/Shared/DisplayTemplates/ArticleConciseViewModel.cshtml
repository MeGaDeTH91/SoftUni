@model ArticleConciseViewModel

<tr>
    <td>@Model.Id</td>
    <td><a asp-page="/Articles/Details" asp-route-id="@Model.Id">@Model.Title</a></td>
    <td>
        <a asp-area="Administrator" asp-page="/Articles/Details" asp-route-id="@Model.Id"
           class="btn btn-default">Details</a>
        <a asp-area="Administrator" asp-controller="Articles" asp-action="EditArticle" asp-route-id="@Model.Id"
           class="btn btn-warning">
            Edit
        </a>
        <a asp-area="Administrator" asp-controller="Articles" asp-action="DeleteArticle" asp-route-id="@Model.Id"
           class="btn btn-danger">
            Delete
        </a>
    </td>
</tr>
