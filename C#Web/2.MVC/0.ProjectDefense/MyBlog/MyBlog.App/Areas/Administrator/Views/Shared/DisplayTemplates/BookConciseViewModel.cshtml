@model BookConciseViewModel

<tr>
    <td>@Model.Id</td>
    <td><a asp-page="/Books/BookDetails" asp-route-id="@Model.Id">@Model.Title</a></td>
    <td>
        <a asp-area="Administrator" asp-page="/Books/BookDetails" asp-route-id="@Model.Id"
           class="btn btn-default">Details</a>
        <a asp-area="Administrator" asp-controller="Books" asp-action="EditBook" asp-route-id="@Model.Id"
           class="btn btn-warning">
            Edit
        </a>
        <a asp-area="Administrator" asp-controller="Books" asp-action="DeleteBook" asp-route-id="@Model.Id"
           class="btn btn-danger">
            Delete
        </a>
    </td>
</tr>
