@model BrandDetailsViewModel

<div class="container row">
    <div class="col-12">
        <br />
        <form method="post">
            <div class="form-group row">
                <input type="hidden" class="form-control" name="BrandName" placeholder="Brand Name" value="@Model.BrandName" />
            </div>
            <div class="form-group row">
                <label class="form-control-label">Brand Description</label>
                <textarea class="form-control" name="BrandDescription" placeholder="Brand Descrtiption" minlength="20">@Model.BrandDescription</textarea>
            </div>

            <div class="form-group row">
                <label class="form-control-label">Brand Image URL</label>
                <input type="url" class="form-control" name="BrandImageURL" placeholder="Enter URL to Image" value="@Model.BrandImageURL" />
            </div>
            <div class="form-group row">
                <label class="form-control-label">Additional InfoURL</label>
                <input type="url" class="form-control" name="AdditionalInfoURL" placeholder="Enter URL for Additional Info" value="@Model.AdditionalInfoURL" />
            </div>

            <input type="submit" value="Edit" class="btn btn-warning" />
            <a asp-area="Administrator" asp-controller="Brands" asp-action="Index" class="btn btn-default">Cancel</a>
        </form>
    </div>
</div>