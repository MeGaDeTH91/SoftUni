@model JokeDetailsViewModel

<div class="container row">
    <div class="col-12">
        <br />
        <form method="post">
            <div class="form-group row">
                <label class="form-control-label">Joke Title</label>
                <input class="form-control" name="Title" placeholder="Enter Meme Title" value="@Model.Title" />
            </div>
            <div class="form-group row">
                <label class="form-control-label">Joke Content</label>
                <textarea class="form-control" name="Content" placeholder="Joke Content" minlength="15">@Model.Content</textarea>
            </div>
            <div class="form-group row">
                <label class="form-control-label">Photo URL</label>
                <input type="url" class="form-control" name="PhotoURL" placeholder="Enter URL to Image" value="@Model.PhotoURL" />
            </div>

            <input type="submit" value="Edit" class="btn btn-warning" />
            <a asp-area="Administrator" asp-controller="Jokes" asp-action="Index" class="btn btn-default">Cancel</a>
        </form>
    </div>
</div>