@model ProductDetailsViewModel
@{
    ViewData["Title"] = "Edit Product";
}

<div class="container row">
    <div class="col-12">
        <br />
        <form method="post">
            <div class="form-group row">
                <label class="form-control-label">Product Name</label>
                <input class="form-control" name="ProductName" placeholder="Enter Product Name" value="@Model.ProductName" />
            </div>
            <div class="form-group row">
                <label class="form-control-label">Product Description</label>
                <textarea class="form-control" name="Description" placeholder="Product Description" minlength="15">@Model.Description</textarea>
            </div>
            <div class="form-group row">
                <label class="form-control-label">Product Price</label>
                <textarea class="form-control" name="Price" placeholder="Product Price" minlength="15">@Model.Price</textarea>
            </div>
            <div class="form-group row">
                <label class="form-control-label">Video URL</label>
                <input type="url" class="form-control" name="HighLightVideoURL" placeholder="Enter URL to Video" value="@Model.HighLightVideoURL" />
            </div>
            <div class="form-group row">
                <label class="form-control-label">Product Image URL</label>
                <input type="url" class="form-control" name="PhotoURL" placeholder="Enter URL to Image" value="@Model.PhotoURL" />
            </div>
            <div class="form-group row">
                <label class="form-control-label">Additional Info URL</label>
                <input type="url" class="form-control" name="AdditionalInfoURL" placeholder="Enter URL for Additional Info" value="@Model.AdditionalInfoURL" />
            </div>

            <input type="submit" value="Edit" class="btn btn-warning" />
            <a asp-area="Administrator" asp-controller="Products" asp-action="Index" class="btn btn-default">Cancel</a>
        </form>
    </div>
</div>