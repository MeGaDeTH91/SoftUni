@model SongDetailsViewModel
@{
    ViewData["Title"] = "Delete Song";
}

<h2>Delete Song - @Model.SongName</h2>

<div class="container row">
    <div class="col-12">
        <br />
        <form method="post">
            <div class="form-group row">
                <input class="form-control" name="SongName" placeholder="Song Name" value="@Model.SongName" disabled />
            </div>
            <div class="form-group row">
                <label class="form-control-label">Song Description</label>
                <textarea class="form-control" name="Description" placeholder="Song Descrtiption" minlength="20" disabled>@Model.Description</textarea>
            </div>

            <div class="form-group row">
                <label class="form-control-label">Song Image URL</label>
                <input type="url" class="form-control" name="PhotoURL" placeholder="Enter URL to Image" value="@Model.PhotoURL" disabled />
            </div>
            <div class="form-group row">
                <label class="form-control-label">Additional InfoURL</label>
                <input type="url" class="form-control" name="AdditionalInfoURL" placeholder="Enter URL for Additional Info" value="@Model.AdditionalInfoURL" disabled />
            </div>
            <div class="form-group row">
                <label class="form-control-label">Video URL</label>
                <input type="url" class="form-control" name="HighLightVideoURL" placeholder="Enter URL to Video" value="@Model.HighLightVideoURL" disabled />
            </div>

            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-area="Administrator" asp-controller="Songs" asp-action="Index" class="btn btn-default">Cancel</a>
        </form>
    </div>
</div>