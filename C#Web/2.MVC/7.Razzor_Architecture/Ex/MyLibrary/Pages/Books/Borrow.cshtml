@page "{id}"
@model MyLibrary.Web.Pages.Books.BorrowModel
@{
    ViewData["Title"] = "Borrow";
}

<h2>Borrow</h2>

<form method="post">
    <div>
        @{
            List<SelectListItem> listItems = new List<SelectListItem>();

            foreach (var borrower in Model.Borrowers)
            {
                listItems.Add(new SelectListItem
                {
                    Text = borrower,
                    Value = borrower,
                });
            }
        }

        @Html.DropDownListFor(model => model.Name, listItems, "-- Select Borrower --")

        <h4>Do not see your name here?</h4>
        <a class="btn btn-success" asp-page="/Borrowers/Add">Add New Borrower</a>

    </div>
    <div class="form-group row">
        <label asp-for="EndDate" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="EndDate" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10 offset-2">
            <input type="submit" class="btn btn-success" value="Borrow Book" />
            <a class="btn btn-light btn-outline-dark" asp-page="/Index">Cancel</a>
        </div>
    </div>
</form>
