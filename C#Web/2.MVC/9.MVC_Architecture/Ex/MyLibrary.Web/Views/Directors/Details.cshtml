@model DirectorDetailsViewModel
@{
    ViewData["Title"] = "Details";
}

<div class="h1">@Model.Name</div>

<div>
    <ul>
        @foreach (var movie in Model.Movies)
        {
        <li>
            <a asp-controller="Movies" asp-action="Details" asp-route-id="@(movie.MovieId)">@movie.Title</a> (@movie.Status)            
        </li>
        }
    </ul>
</div>