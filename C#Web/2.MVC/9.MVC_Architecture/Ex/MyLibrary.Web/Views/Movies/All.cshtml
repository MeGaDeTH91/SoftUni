@model IEnumerable<MovieDetailsViewModel>
@{
    ViewData["Title"] = "All-Movies";
}

<br />

<div class="form-group row">
    <div class="col-sm-10">
        <a class="btn btn-success" asp-page="/Books/Add">Add New Book</a>
        <a class="btn btn-success" asp-page="/Borrowers/Add">Add New Borrower</a>
    </div>
</div>
<div class="container">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Director</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td><a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.MovieId">@movie.Title</a></td>
                    <td><a asp-controller="Directors" asp-action="Details" asp-route-id="@movie.DirectorId">@movie.Director</a></td>
                    <td>@movie.Status</td>
                </tr>
            }
        </tbody>
    </table>
</div>