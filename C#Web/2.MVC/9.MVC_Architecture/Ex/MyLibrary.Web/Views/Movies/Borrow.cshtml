@model BorrowViewModel
@{
    ViewData["Title"] = "Borrow";
}

<h2>Borrow</h2>

<form method="post">
    <input type="hidden" value="@Model.MovieId" name="MovieId"/>
    <div>
        <select asp-for="BorrowerId" asp-items="Model.Borrowers" class="form-control"></select>

        <h4>Do not see your name here?</h4>
        <a class="btn btn-success" asp-page="/Borrowers/Add">Add New Borrower</a>

    </div>
    <div class="form-group row">
        <label asp-for="StartDate" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="StartDate" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="EndDate" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="EndDate" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10 offset-2">
            <input type="submit" class="btn btn-success" value="Borrow Movie" />
            <a class="btn btn-light btn-outline-dark" asp-page="/Index">Cancel</a>
        </div>
    </div>
</form>