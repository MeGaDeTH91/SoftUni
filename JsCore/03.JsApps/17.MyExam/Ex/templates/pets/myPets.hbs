{{> navbar}}
<section class="myPet">
    <h3>Name: {{name}}</h3>
    <p>Category: {{category}}</p>
    <p class="img"><img src="{{imageURL}}"></p>
    <p class="description">{{description}}</p>
    <div class="pet-info">
        <a href="#/edit-pet"><button class="button">Edit</button></a>
        <a href="#/delete-pet"><button class="button">Delete</button></a>
        <i class="fas fa-heart"></i> <span>{{hearts}}</span>
    </div>
</section>
{{> footer}}